<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_button">

    <ImageView
        android:id="@+id/ImvPic"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="-1dp"
        android:src="@drawable/caffe"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capuchino"
                android:layout_weight="1"
                android:textColor="#895D39"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TvTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35.000$"
                android:textColor="#895D39"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ImbPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:id="@+id/TvsoLuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:text="1"
                    android:textColor="#895D39"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/ImbTru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_rule" />

            </LinearLayout>

            <TextView
                android:id="@+id/TvtongTien"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="35.000d"
                android:textColor="#895D39"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>